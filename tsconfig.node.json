{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": false,
    
    // Remove allowImportingTsExtensions since we're not using noEmit here
    "outDir": "./dist"
  },
  "include": ["vite.config.ts"]
}